{
  "compilerOptions": {
    "target": "es6",
    "resolveJsonModule": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@@/*": [".dumi/tmp/*"],
      "x-star-design": ["src"],
      "x-star-design/*": ["src/*", "*"]
    }
  },
  "include": [
    ".dumi/**/*",
    ".dumirc.ts",
    "src/**/*",
    "test/**/*",
    "jest-setup.ts"
  ]
}
